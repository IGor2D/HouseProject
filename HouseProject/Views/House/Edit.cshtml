@model HouseProject.Models.House.HouseViewModel


@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifieAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Street" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Street" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Entrance" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Entrance" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Number" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Floor" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Floor" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CreatedAt" class="form-control" />
            </div>
        </div>
@if (Model.Id.HasValue)
{
    <input asp-action="edit" asp-controller="house" type="submit" class="btn btn-primary" value="Update">
    <input asp-action="delete" asp-controller="house" asp-for="Id" type="submit" class="btn btn-danger" value="Delete">
}
else
{
    <input asp-action="add" asp-controller="house" type="submit" class="btn btn-primary" value="Add">
}
<a asp-action="index" class="btn btn-primary">Index</a>

    </form>
</div>